

<% if(blog != null ) { %>

    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%- blog.name %></li>
        
      </ol>
      
    </nav>
  
  
    <div class="row">

      
  
      <div class="col-12 col-md-4">
        <img src="/uploads/<%- blog.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- blog.name %>" loading="lazy">
      </div>
  
      <div class="col-12 col-md-8">
        <div class="row">
          <div class="col-12"><h1><%- blog.name %></h1></div>
          <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- blog.category %></div>
          <div class="col-12" style="white-space: pre-line;">
            <h4> Blog description</h4>
            <%- blog.description %>
          </div>
        </div>
    </div>
</div>

        <div class="col-12 col-md-8">

      
            <div class="row">
              <!-- <div class="col-12"><h1><%- blog.content %></h1></div> -->
              <!-- <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- blog.content %></div> -->
              <div class="col-12" style="white-space: pre-line;">
                <h4> Content</h4>
                <%- blog.content %>
              </div>
            </div>
            <!-- <a href="/delete-blog/:id" class="btn btn-primary btn-dark btn-lg px-4 me-md-2">Delete Blog</a> -->
            <form action="/delete-blog/<%= blog._id %>?_method=DELETE" method="GET">
              <button type="submit" class="btn btn-danger">Delete Blog</button>
            </form>
              <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </div>

   
     
  <% } else { %>
    <p>No item found.</p>
  <% } %>